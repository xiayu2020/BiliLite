<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#6666"
        android:id="@+id/PopIn">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/白色"
                app:cardCornerRadius="22dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="-10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/onecoin"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:transitionName="video_card_transition"
                        app:cardBackgroundColor="@color/卡片边框色"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="35dp"
                            android:src="@drawable/coin2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="20dp"
                            android:text="1个硬币"
                            android:textColor="@color/字体颜色"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/doublecoin"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="60dp"
                        android:transitionName="video_card_transition"
                        app:cardBackgroundColor="@color/卡片边框色"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="35dp"
                            android:src="@drawable/coin3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="20dp"
                            android:text="2个硬币"
                            android:textColor="@color/字体颜色"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="20dp"
                    android:transitionName="video_card_transition"
                    app:cardBackgroundColor="@color/卡片边框色"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:id="@+id/close">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/close" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</layout>