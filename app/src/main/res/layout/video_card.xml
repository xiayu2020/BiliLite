<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/videocard"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:transitionName="video_card_transition"
            app:cardBackgroundColor="@color/卡片边框色"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/watch_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/product2"
                    android:maxLines="1"
                    android:textColor="@color/白色"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/time_long"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/product2"
                    android:maxLines="1"
                    android:textColor="@color/白色"
                    android:textSize="10sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="加载中"
            android:textColor="@color/字体颜色"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:text="加载中"
            android:textColor="@color/小字体颜色"
            android:textSize="11sp" />
    </LinearLayout>
</layout>